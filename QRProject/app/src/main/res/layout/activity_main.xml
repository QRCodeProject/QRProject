<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="telepaste.androidclass.com.telepaste.MainActivity">

    <ImageView
        android:id="@+id/img_background"
        android:src="@drawable/background"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <ImageView
        android:id="@+id/img_flash"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true"
        android:scaleType="center"
        android:src="@drawable/ic_flash_off"
        android:tint="#ffffff"
        android:layout_width="48dp"
        android:layout_height="48dp" />
    <ImageView
        android:layout_marginTop="70dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_qr"
        android:layout_width="250dp"
        android:layout_height="250dp" />
    <RelativeLayout
        android:layout_marginBottom="150dp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/img_scanqr"
            android:src="@drawable/ic_scanner"
            android:tint="#ffffff"
            android:onClick="QrScanner"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="30dp"
            android:layout_width="50dp"
            android:layout_height="match_parent" />
        <ImageView
            android:src="@drawable/ic_add_a_photo"
            android:tint="#ffffff"
            android:layout_centerHorizontal="true"
            android:layout_width="50dp"
            android:layout_height="match_parent" />
        <ImageView
            android:src="@drawable/ic_scan_barcode"
            android:tint="#ffffff"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:layout_width="50dp"
            android:layout_height="match_parent" />
    </RelativeLayout>
    <TextView
        android:text="Welcome to Scanpaste"
        android:gravity="center_horizontal"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="50dp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="30dp" />

</RelativeLayout>
